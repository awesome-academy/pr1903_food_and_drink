<div class="box-header"></div>
<% provide(:title, t(".sign_up")) %>
<h1 style="text-align: center"><%= t(".sign_up") %></h1>
<div class="row justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, :html => {:class => "custom-input"}) do |f| %>
      <%= f.text_field :name, class: 'custom-form-control', placeholder: t(".name") %>
      <%= f.email_field :email, class: 'custom-form-control', placeholder: t(".email") %>
      <%= f.password_field :password, class: 'custom-form-control', placeholder: t(".password") %>
      <%= f.password_field :password_confirmation, class: 'custom-form-control', placeholder: t(".password_confirmation") %>
      <%= f.submit "Create my account", class: "btn btn-green" %>
    <% end %>
  </div>
</div>
