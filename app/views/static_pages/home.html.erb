<!-- Delicious area start  -->
<div class="Delicious_area">
  <div class="container">
    <div class="row">
      <div class="col-xl-12">
        <div class="section_title text-center mb-50">
          <h3>Delicious Food For You</h3>
        </div>
      </div>
    </div>
    <div class="tablist_menu">
        <div class="row">
            <div class="col-xl-12">
                <ul class="nav justify-content-center" id="pills-tab" role="tablist">
                    <% @categories.each_with_index do |category, i| %>
                      <li class="nav-item">
                        <% active = i == 0 ? "active" : "" %>
                        <a class="nav-link <%= active %>" id="pills-category-<%= category.id %>" data-toggle="pill" href="#category-<%= category.id %>" role="tab" aria-controls="pills-home" aria-selected="true">
                          <div class="single_menu text-center">
                            <h4><%= category.category %></h4>
                          </div>
                        </a>
                      </li>
                    <% end %>
                </ul>
            </div>
          </div>
    </div>

    <div class="tab-content" id="pills-tabContent">
      <% @categories.each_with_index do |category, i| %>
        <% active = i == 0 ? "active" : "" %>
        <div class="tab-pane fade show <%= active %>" id="category-<%= category.id %>" role="tabpanel" aria-labelledby="pills-home-tab">
          <div class="row">
            <% category.consumables.each do |consumable| %>
              <div class="col-xl-6 col-md-6 col-lg-6">
                <div class="single_delicious d-flex align-items-center">
                  <div class="thumb thumb-custom">
                    <%= image_tag consumable.pictures.url, class: "img-fluid img-consumable-home" %>
                  </div>
                  <div class="info">
                    <h3>#<%= consumable.id %> <%= consumable.name %></h3>
                    <p><%= consumable.description %></p>
                    <span><%= consumable.price %> VNĐ</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
