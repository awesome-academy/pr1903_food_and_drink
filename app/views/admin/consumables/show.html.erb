<div class="box-header"></div>
  <div class="col-3">
    <div class="card">
      <%# image_tag consumable.picture.preview(resize_to_limit: [100, 100]) %>
      <div class="card-body">
        <p class="card-text"><%= t(".name") %>: <%= @consumable.name %></p>
        <p class="card-text"><%= t(".price") %>: <%= @consumable.price %></p>
        <p class="card-text"><%= t(".out of stock") %></p>
      </div>
    </div>
  </div>
<h3> <%=t(".rating") %>:<span style="color: red"><%= @rating %></span> </h3>
<%= form_for (Rating.new) do |f| %>
  <%= f.hidden_field :consumable_id, value: @consumable.id %>
  <%= f.text_field :rating %>
  <%= f.submit t(".confirmation") %>
<% end %>
