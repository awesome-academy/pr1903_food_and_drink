<% provide(:title, "Log in") %>
<h1 style="text-align: center;">Log in</h1>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, class: 'custom-form-control', placeholder: t(".email") %>
        <%= f.password_field :password, class: 'custom-form-control', placeholder: t(".password") %>
        <%= f.submit "Create my account", class: "btn btn-green" %>
      <% end %>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
